<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/back204">
    
    

    <TextView
        android:id="@+id/quote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="65dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="It&apos;s amazing that the amount of news that happens in the world every day always just exactly fits the newspaper. "
        android:textColor="#FFF"
        android:textSize="25dp"
        android:paddingTop="4dp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quote"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:paddingRight="10dp"
        android:text=" - Jerry Seinfeld"
        android:textColor="#FFF"
        android:textSize="29dp" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginRight="30dp"

        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFF" />

    <ImageView
        android:id="@+id/share"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@+id/number"
        android:layout_toRightOf="@+id/name"
        android:src="@drawable/ic_action_share" />

    <ImageView
        android:id="@+id/quote10"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignRight="@+id/name"
        android:layout_alignTop="@+id/share"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_action_shuffle" />


</RelativeLayout>
